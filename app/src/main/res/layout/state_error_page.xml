<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/no_wifi_top">

        <ImageView
            android:id="@+id/no_wifi"
            android:layout_width="@dimen/no_wifi_width"
            android:layout_height="@dimen/no_wifi_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_no_wifi_disable" />

        <TextView
            android:id="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_wifi"
            android:alpha="0.6"
            android:gravity="center_horizontal"
            android:text="@string/no_available_network"
            android:textColor="@color/black"
            android:textSize="@dimen/res_textsize_13sp" />


    </RelativeLayout>


    <Button
        android:id="@+id/setting"
        style="@style/nodata_bluebuttonbottom"
        android:layout_width="@dimen/alertDialog_width"
        android:layout_height="@dimen/wifi_setting_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/wifi_setting_bottom"
        android:layout_marginStart="@dimen/wifi_setting_lef"
        android:layout_marginEnd="@dimen/wifi_setting_right"
        android:text="@string/setting_network"
        android:textAllCaps="true" />

</RelativeLayout>